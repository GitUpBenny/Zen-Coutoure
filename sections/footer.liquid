<style>
button {
	background: none;
	color: inherit;
	border: none;
	padding: 0;
	font: inherit;
	cursor: pointer;
	outline: inherit;
  width: 46px;
}
</style>
<footer class="footer footer-default">
  <div class="footer-top">
    <div class="container">
      <div class="row">
        <div class="col-6 col-md-6 col-lg-3 column-footer no-dropdown">
          {% if section.settings.footer_logo  != blank %}
          <h3>
            <a href="/" class="logo-ft">
              <img src="{{'preload-img-jp.jpg' | file_url }}" data-src="{{ section.settings.footer_logo | img_url:'master' }}">            
            </a>
          </h3>
          {% endif %}
          <dl>
            <dt>
              <i class="fa fa-map-marker" aria-hidden="true"></i>
            </dt>
            <dd>
              {% include 'multilang' with section.settings.ft_adr_1 %}
            </dd>
          </dl>

          <dl>
            <dt>
              <i class="fa fa-phone-square" aria-hidden="true"></i>
            </dt>
            <dd>
              {% include 'multilang' with section.settings.ft_phone %}
            </dd>
          </dl>

          <dl>
            <dt>
              <i class="fa fa-envelope-o" aria-hidden="true"></i>
            </dt>
            <dd>
              {% include 'multilang' with section.settings.ft_mail %}
            </dd>
          </dl>
        </div>
        
        <div class="col-6 col-md-3 col-lg-2 column-footer">
          {% if section.settings.footer_title_2 != blank %}
          <h3>
            {% include 'multilang' with section.settings.footer_title_2 %}
          </h3>

          {% endif %}
          
          {%- assign footer_linklist = section.settings.footer_linklist_2 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
          <ul>
            {% for link in linklists[footer_linklist].links %}
            <li>
              <a href="{{ link.url}}">
                {% include 'multilang' with link.title %}
              </a>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
          <br>
		  {% if section.settings.footer_social_enable %}
          <div class="footer-social">
            {% include 'social-media' %}
          </div>
          {% endif %}              
        </div>
        
        
        {%comment%}
        <div class="col-6 col-md-3 col-lg-2 column-footer">
          {% if section.settings.footer_title_3 != blank %}
          <h3>
            {% include 'multilang' with section.settings.footer_title_3 %}
          </h3>
          {% endif %}
          
          {%- assign footer_linklist = section.settings.footer_linklist_3 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
          <ul>
            {% for link in linklists[footer_linklist].links %}
            <li>
              <a href="{{ link.url}}">
                {% include 'multilang' with link.title %}
              </a>
            </li>
            {% endfor %}
          </ul>
          {% endif %}
      
        </div>       
        
        
        <div class="col-6 col-md-3 col-lg-2 column-footer">
          {% if section.settings.footer_title_4 != blank %}
          <h3>
            {% include 'multilang' with section.settings.footer_title_4 %}
          </h3>
          {% endif %}
          
          {%- assign footer_linklist = section.settings.footer_linklist_4 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
          <ul>
            {% for link in linklists[footer_linklist].links %}
            <li>
              <a href="{{ link.url}}">
                {% include 'multilang' with link.title %}
              </a>
            </li>
            {% endfor %}
          </ul>
          {% endif %}       
        </div>
        
        {%endcomment%} 
        
        <div class="col-6 col-md-6 offset-md-6 col-lg-6 offset-lg-0 column-footer no-dropdown">     
          {% if section.settings.footer_newsletter_enable %}
          <div class="footer-newsletter">
          <div class="klaviyo-form-PfQKen"></div>
          </div>
          {%comment%}
          <div class="footer-newsletter">
            <h3>
              {% include 'multilang' with section.settings.footer_newsletter_text %}
            </h3>
            <div class="des">
              {% include 'multilang' with  section.settings.des_newsletter %}
            </div>
            {% include 'homepage-block-newsletter' %}
          </div>
          {%endcomment%}
          {% endif %}
        </div>        
      </div>
    </div>
  </div>
  
  {% if section.settings.display_ft_bt %}
  <div class="footer-bottom">
    <div class="container">
      <div class="row">
        <div class="footer_address column-left col-12 col-md-12 col-lg-7 col-xl-6">
          {% include'multilang' with section.settings.ft_address %}
        </div>
        <div class="footer_address column-right col-12 col-md-12 col-lg-5 col-xl-6">
          <ul>
            {% if section.settings.dpl_ico_1 %}
            <li>
